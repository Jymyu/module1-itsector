<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/texto_normal</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_text</item>
    </style>

    <style name="TwitLayout">
        <item name="android:padding">@dimen/padding_item</item>
    </style>

    <style name="ProfileLayout">
        <item name="android:padding">@dimen/padding_item</item>
    </style>

</resources>
