<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ProfileLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_profile_image2"
        android:layout_width="@dimen/profile_pic_height"
        android:layout_height="@dimen/profile_pic_height"
        app:civ_border_width="2dp"
        android:layout_alignParentLeft="true"
        app:civ_border_color="#FF000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_profile_image2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/tv_name2"
        style="@style/ContentText"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name2"
        android:layout_toRightOf="@id/img_profile_image2"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_nacionalidade"
        style="@style/ContentText"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_profile_image"
        android:layout_alignBottom="@id/img_profile_image"
        android:layout_below="@id/img_profile_image2"
        android:id="@+id/tv_text2"
        style="@style/ContentText"
        android:layout_marginTop="@dimen/margin_top_text"
        />


</RelativeLayout>